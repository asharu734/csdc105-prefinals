<!DOCTYPE html>
<html>
    <%- include('../partials/head.ejs') %>
<body>
    <%- include('../partials/nav.ejs') %>

    <div class="blogContent">
        <h2>All Blogs</h2>
        <% if (blogs.length > 0) { %>
            <% blogs.forEach(blog => {  %>
                <a class="single" href="/blogs/<%= blog._id %>">
                <h3 class="title"><%= blog.title %></h3>
                <p class="snippet"><%= blog.snippet %></p>
                </a>
            <%  }) %>
        <%  } else {%>
            <p>Nah</p>
        <% } %>
    </div>

    <%- include('../partials/footer.ejs') %>
</body>
</html>